#!/bin/bash

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install Minikube first."
    exit 1
fi

echo "âœ… Minikube is installed."

echo "ğŸš€ Starting Minikube cluster..."
minikube start

if [ $? -ne 0 ]; then
    echo "âŒ Failed to start Minikube cluster."
    exit 1
fi

echo "âœ… Minikube cluster started."

echo "ğŸ” Verifying Kubernetes cluster status..."
kubectl cluster-info

if [ $? -ne 0 ]; then
    echo "âŒ Unable to verify cluster status."
    exit 1
fi

echo "âœ… Cluster is running."

echo "ğŸ“¦ Retrieving available pods in default namespace..."
kubectl get pods

echo "âœ… Script completed."
